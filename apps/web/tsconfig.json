{
  "extends": "../../packages/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "fumadocs-mdx:collections/*": [".source/*"],
      "emails/*": ["../email/emails/*"],
      "react": ["./node_modules/@types/react"],
      "database/types": ["../database/lib/database.types.ts"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "source.config.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
