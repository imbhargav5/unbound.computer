# ===========================================
# Supabase Configuration (Required)
# ===========================================
# Local development
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY
SUPABASE_SERVICE_ROLE_KEY=SUPABASE_SECRET_KEY
SUPABASE_DATABASE_PASSWORD=postgres
# SUPABASE_PROJECT_REF=SUPABASE_PROJECT_REF

# ===========================================
# Redis Configuration (Required for event streaming)
# ===========================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ===========================================
# Relay Server URLs
# ===========================================
NEXT_PUBLIC_RELAY_WS_URL=ws://localhost:8080

# ===========================================
# Host Configuration
# ===========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# Cron Job Authentication
# ===========================================
CRON_SECRET=your-random-secret-here

# ===========================================
# Payment Processing (Stripe)
# ===========================================
STRIPE_SECRET_KEY=STRIPE_SECRET_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=STRIPE_WEBHOOK_SECRET

# ===========================================
# Email Configuration (Resend)
# ===========================================
ADMIN_EMAIL=admin@myapp.com
RESEND_API_KEY=RESEND_API_KEY
USE_LOCAL_EMAIL=true

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_POSTHOG_API_KEY=NEXT_PUBLIC_POSTHOG_API_KEY
NEXT_PUBLIC_POSTHOG_APP_ID=NEXT_PUBLIC_POSTHOG_APP_ID
NEXT_PUBLIC_POSTHOG_HOST=NEXT_PUBLIC_POSTHOG_HOST
NEXT_PUBLIC_GA_ID=NEXT_PUBLIC_GA_ID
UNKEY_ROOT_KEY=UNKEY_ROOT_KEY
UNKEY_API_ID=UNKEY_API_ID

# ===========================================
# OAuth Providers (Supabase Auth)
# ===========================================
TWITTER_API_KEY=TWITTER_API_KEY
TWITTER_API_SECRET=TWITTER_API_SECRET
GOOGLE_CLIENT_ID=GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=GOOGLE_CLIENT_SECRET
GITHUB_CLIENT_ID=GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=GITHUB_CLIENT_SECRET
