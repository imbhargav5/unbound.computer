{
  "name": "@unbound/cli",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "bin": {
    "unbound": "./dist/bin.js"
  },
  "scripts": {
    "build": "tsup src/bin.ts src/daemon.ts --format esm --dts --target node20",
    "dev": "tsup src/bin.ts src/daemon.ts --format esm --watch",
    "start": "node dist/bin.js",
    "daemon": "node dist/daemon.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "@unbound/crypto": "workspace:*",
    "@unbound/identity": "workspace:*",
    "@unbound/pairing": "workspace:*",
    "@unbound/protocol": "workspace:*",
    "@unbound/storage": "workspace:*",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "ora": "^8.2.0",
    "open": "^10.1.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nextbase/typescript-config": "workspace:*",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
